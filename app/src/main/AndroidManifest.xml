<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmployeeManagementApp"
        tools:targetApi="31">
        <activity
            android:name=".UI.AllEmployeeHours"
            android:exported="false"
            android:label="All Employee Hours"
            android:parentActivityName=".UI.AdminActivity"/>
        <activity
            android:name=".UI.SingleEmployeeHours"
            android:exported="false"
            android:label="Employee Hours"
            android:parentActivityName=".UI.AdminActivity"/>
        <activity
            android:name=".UI.AddNewUser"
            android:exported="false"
            android:label="Add New User"
            android:parentActivityName=".UI.AdminActivity"/>
        <activity
            android:name=".UI.ChangeAdminAccount"
            android:exported="false"
            android:label="Change Admin Account"
            android:parentActivityName=".UI.AdminActivity"/>
        <activity
            android:name=".UI.AdminActivity"
            android:exported="false"
            android:label="Admin Account"
            android:parentActivityName=".UI.LoginActivity"/>
        <activity
            android:name=".UI.UserActivity"
            android:exported="false"
            android:label="User Account"
            android:parentActivityName=".UI.LoginActivity"/>
        <activity
            android:name=".UI.LoginActivity"
            android:exported="false"
            android:label="Login"
            android:parentActivityName=".UI.MainActivity"/>
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>